{
    "extends": [
      "tslint:recommended",
      "tslint-react"
    ],
    "rules": {
        "jsx-alignment": false,
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "jsx-curly-spacing": [
          true,
          "always"
        ],
        "space-before-function-paren": [ true,
          {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
          }
        ],
        "no-unused-expression": false,
        "jsx-no-multiline-js": false,
        "jsx-boolean-value": false,
        "jsx-no-lambda": false,
        "align": [
          true,
          "parameters",
          "statements"
        ],
        "semicolon": [
          true,
          "never"
        ],
        "quotemark": [
          true,
          "single",
          "jsx-double"
        ],
        "max-line-length": [
          true,
          240
        ],
        "whitespace": [
          true,
          "check-branch",
          "check-operator",
          "check-typecast",
          "check-preblock",
          "check-decl",
          "check-type"
        ],
        "indent": [
          true,
          "spaces"
        ],
        "class-name": false,
        "eofline": true,
        "triple-equals": true,
        "member-access": false,
        "no-angle-bracket-type-assertion": true,
        "no-console": [
          true,
          "log",
          "error"
        ],
        "no-empty": true,
        "no-empty-interface": false,
        "no-var-requires": false,
        "variable-name": [
          true,
          "ban-keywords",
          "check-format",
          "allow-leading-underscore",
          "allow-pascal-case"
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "arrow-parens": [
          true,
          "ban-single-arg-parens"
        ],
        "array-type": [
          true,
          "array"
        ],
        "object-literal-shorthand": true,
        "no-consecutive-blank-lines": [
          true,
          2
        ],
        "trailing-comma": [
          true,
          {
            "multiline": "never",
            "singleline": "never"
          }
        ],
        "object-literal-key-quotes": [
          true,
          "as-needed"
        ],
        "prefer-const": true,
        "no-string-literal": false,
        "max-classes-per-file": [
          false
        ],
        "interface-name": false,
        "member-ordering": false
      }
  }
